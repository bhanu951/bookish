<?php

$prepareContext = function(&$context) {
  $ids = \Drupal::entityQuery('node')
    ->condition('type', 'blog')
    ->condition('status', 1)
    ->condition('promote', TRUE)
    ->condition('created', time(), '<=')
    ->sort('sticky', 'DESC')
    ->sort('created', 'DESC')
    ->range(0, 3)
    ->accessCheck()
    ->execute();
  $context['nodes'] = \Drupal::entityTypeManager()
    ->getStorage('node')
    ->loadMultiple($ids);
};

$definition['block'] = [
  'admin_label' => 'Blog listing',
];
