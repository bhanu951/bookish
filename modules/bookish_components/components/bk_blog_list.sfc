<template>
  <div class="bk-blog-list container container--margin">
    {% include 'sfc--bk-blog-title' with {
      'title': 'Recent posts' | t,
      'element': 'h2'
    } %}
    <div class="bk-blog-list__blogs">
      {% for node in nodes %}
        {% include 'sfc--bk-blog-teaser' with {
          'title': node.label(),
          'link': path('entity.node.canonical', {'node': node.id}),
          'text': node.body|view({
            'label': 'hidden',
            'type': 'text_summary_or_trimmed',
            'settings': {'trim_length': 350}
          }),
          'title_element': 'h3',
          'image': node.field_image|view({
            'label': 'hidden',
            'type': 'image',
            'settings': {'image_style': 'blog_teaser'}
          }),
        }%}
      {% endfor %}
      {{ sfc_cache(nodes) }}
      {{ sfc_cache('node_list') }}
    </div>
    {% include 'sfc--bk-more-link' with {'link': '/blog', 'text': 'all posts' | t} %}
  </div>
</template>

<style>
  .bk-blog-list .bk-blog-title {
